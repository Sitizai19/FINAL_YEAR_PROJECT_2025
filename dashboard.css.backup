}

.service-actions {
    display: flex;
    gap: 0.5rem;
    margin-left: 1rem;
}

.action-btn {
    background: none;
    border: none;
    padding: 0.4rem;
    border-radius: 4px;
    cursor: pointer;
    transition: all 0.2s ease;
    color: #718096;
    font-size: 0.9rem;
}

.action-btn:hover {
    background-color: #f8f9fa;
    color: #2d3748;
}

.edit-btn:hover {
    color: #2b6cb0;
}

.delete-btn:hover {
