/* Responsive Design */
@media (max-width: 768px) {
    .section__container {
        padding: 0 1rem;
    }
    
    

    .welcome__section {
        flex-direction: column;
        gap: 1rem;
        text-align: center;
    }

    .stats__grid {
        grid-template-columns: 1fr;
    }


    .form__row {
        grid-template-columns: 1fr;
    }

    .pets__grid {
        grid-template-columns: 1fr;
    }

    .pet__details {
        grid-template-columns: 1fr;
    }

    .modal__content {
        margin: 1rem;
        max-width: calc(100% - 2rem);
