}

.service-title {
    font-size: 1.1rem;
    font-weight: 600;
    color: #2d3748;
    margin: 0 0 0.5rem 0;
}

.service-description {
    color: #718096;
    margin: 0 0 0.75rem 0;
    line-height: 1.4;
    font-size: 0.9rem;
}

.service-details {
    display: flex;
    gap: 1rem;
    font-size: 0.8rem;
    color: #a0aec0;
}

.price, .duration {
