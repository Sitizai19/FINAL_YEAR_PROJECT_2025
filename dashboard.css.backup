.pets-medical-condition select {
    width: 100%;
    padding: 12px;
    border: 1px solid #ddd;
    border-radius: 8px;
    font-family: inherit;
    font-size: 14px;
    height: auto;
    line-height: normal;
    background: var(--card-background);
}

.pets-event-type select:focus,
.pets-medical-condition select:focus {
    outline: none;
    border-color: var(--primary-color);
    box-shadow: 0 0 0 2px rgba(233, 30, 99, 0.1);
}

/* Pet weight field styling to match other input fields */
.pets-weight input {
    width: 100%;
    padding: 12px;
    border: 1px solid #ddd;
    border-radius: 8px;
    font-family: inherit;
    font-size: 14px;
    height: auto;
    line-height: normal;
}

.pets-weight input:focus {
    outline: none;
    border-color: var(--primary-color);
    box-shadow: 0 0 0 2px rgba(233, 30, 99, 0.1);
}

/* Event Type and Medical Condition Fields */
.pets-event-type, .pets-medical-condition {
    margin-top: 20px;
    flex: 1;
    min-width: 0; /* Prevents flex items from overflowing */
}

.pets-event-type select,
.pets-medical-condition select {
    width: 100%;
    max-width: 100%;
    padding: 12px;
    border: 1px solid #ddd;
    border-radius: 8px;
    font-family: inherit;
    font-size: 14px;
    background-color: white;
    cursor: pointer;
    transition: border-color 0.3s ease, box-shadow 0.3s ease;
    box-sizing: border-box; /* Ensures padding is included in width */
    text-overflow: ellipsis; /* Truncate long text */
    white-space: nowrap; /* Prevent text wrapping */
    overflow: hidden; /* Hide overflow */
}

.pets-event-type select:focus,
.pets-medical-condition select:focus {
    outline: none;
    border-color: var(--primary-color);
    box-shadow: 0 0 0 2px rgba(233, 30, 99, 0.1);
}

.pets-event-type select:hover,
.pets-medical-condition select:hover {
    border-color: #bbb;
}

/* Vaccination Section */
.pets-vaccination-section {
    margin-top: 25px;
    padding: 20px;
    background-color: #f8f9fa;
    border-radius: 8px;
    border: 1px solid #e9ecef;
    /* Removed max-height restriction - now handled by form scrolling */
}

.pets-vaccination-section h3 {
    margin: 0 0 20px 0;
    font-size: 18px;
    font-weight: 600;
    color: var(--text-primary);
    border-bottom: 2px solid var(--primary-color);
    padding-bottom: 8px;
}

.vaccination-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 15px;
}

.vaccination-item {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 12px;
    padding: 15px;
    background-color: white;
    border-radius: 6px;
    border: 1px solid #e9ecef;
    transition: all 0.3s ease;
    width: 100%;
}

.vaccination-item:hover {
    border-color: var(--primary-color);
    box-shadow: 0 2px 8px rgba(233, 30, 99, 0.1);
}

.vaccination-item label {
    display: flex;
    align-items: center;
    gap: 8px;
    cursor: pointer;
    width: 100%;
    margin: 0;
    font-weight: 500;
}

.vaccination-item input[type="checkbox"] {
    width: 18px;
    height: 18px;
    cursor: pointer;
    accent-color: var(--primary-color);
}

.vaccine-name {
    font-size: 14px;
    color: var(--text-primary);
    line-height: 1.4;
    flex: 1;
    word-wrap: break-word;
    overflow-wrap: break-word;
}

.vaccination-date {
    width: 200px;
    padding: 10px 12px;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-size: 14px;
    background-color: white;
    transition: all 0.3s ease;
    opacity: 0.5;
    align-self: flex-start;
}

.vaccination-date:focus {
    outline: none;
    border-color: var(--primary-color);
    box-shadow: 0 0 0 2px rgba(233, 30, 99, 0.1);
}

.other-vaccination {
    flex-direction: column;
    align-items: flex-start;
    gap: 12px;
}

.other-vaccine-input {
    width: 100%;
    max-width: 300px;
    padding: 10px 12px;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-size: 14px;
    background-color: white;
    transition: all 0.3s ease;
    opacity: 0.5;
}

.other-vaccine-input:focus {
    outline: none;
    border-color: var(--primary-color);
    box-shadow: 0 0 0 2px rgba(233, 30, 99, 0.1);
}

/* Notes Field */
.pets-notes {
    margin-top: 20px;
}

.pets-notes textarea {
    width: 100%;
    padding: 12px;
    border: 1px solid #ddd;
    border-radius: 8px;
    font-family: inherit;
    font-size: 14px;
    resize: vertical;
    min-height: 80px;
}

.pets-notes textarea:focus {
    outline: none;
    border-color: var(--primary-color);
    box-shadow: 0 0 0 2px rgba(233, 30, 99, 0.1);
}

/* Profile Sidebar Styles */
.sidebar-overlay {
    position: fixed !important;
    top: 0 !important;
    left: 0 !important;
    width: 100% !important;
    height: 100% !important;
    background: rgba(0, 0, 0, 0.5) !important;
    z-index: 1000 !important;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
}

.sidebar-overlay.active {
    opacity: 1;
    visibility: visible;
}

.sidebar-panel {
    position: fixed !important;
    top: 0 !important;
    right: -500px !important;
    width: 450px !important;
    height: 100% !important;
    background: var(--card-background) !important;
    box-shadow: var(--shadow-large) !important;
    z-index: 1001 !important;
    transition: all 0.3s ease;
    overflow-y: visible;
}

.sidebar-panel.active {
    right: 0 !important;
}

.sidebar-header {
    padding: 15px 20px 10px 20px;
    border-bottom: 1px solid var(--border-color);
    margin-bottom: 10px;
}

.sidebar-header h3 {
    margin: 0;
    font-size: 16px;
    color: var(--text-primary);
    font-weight: 600;
}

.sidebar-body {
    padding: 0 20px 20px 20px;
}

.profile-section {
    padding: 10px 0;
}

.profile-field {
    margin-bottom: 8px;
    padding: 8px;
    background: var(--card-background);
    border-radius: var(--border-radius);
    border-left: 3px solid var(--primary-color);
    box-shadow: var(--shadow-light);
}

.profile-field label {
    display: block;
    font-weight: 600;
    color: var(--text-secondary);
    margin-bottom: 3px;
    font-size: 11px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.profile-field span {
    display: block;
    color: var(--text-primary);
    font-size: 13px;
    word-break: break-word;
    line-height: 1.2;
}

.profile-actions {
    margin-top: 12px;
    padding-top: 10px;
    border-top: 1px solid var(--border-color);
    display: flex;
    flex-direction: row;
    gap: 8px;
    justify-content: space-between;
}

.btn-edit-profile,
.btn-change-password,
.btn-logout,
.btn-cancel-edit {
    flex: 1;
    max-width: 48%;
    padding: 6px 8px;
    margin-bottom: 0;
    border: none;
    border-radius: 8px;
    font-size: 11px;
    font-weight: 500;
    cursor: pointer;
    transition: var(--transition);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 4px;
    min-height: 32px;
}

.btn-edit-profile {
    background: var(--primary-color);
    color: white;
}

.btn-edit-profile:hover {
    background: #c2185b;
    transform: translateY(-1px);
    box-shadow: var(--shadow-medium);
}

.btn-change-password {
    background: var(--text-secondary);
    color: white;
}

.btn-change-password:hover {
    background: var(--text-primary);
    transform: translateY(-1px);
    box-shadow: var(--shadow-medium);
}

.btn-logout {
    background: var(--accent-color);
    color: white;
}

.btn-logout:hover {
    background: #e53e3e;
    transform: translateY(-1px);
    box-shadow: var(--shadow-medium);
}

.btn-cancel-edit {
    background: var(--text-secondary);
    color: white;
}

.btn-cancel-edit:hover {
    background: var(--text-primary);
    transform: translateY(-1px);
    box-shadow: var(--shadow-medium);
}

/* Compact icon sizes for profile buttons */
.btn-edit-profile i,
.btn-change-password i,
.btn-logout i,
.btn-cancel-edit i {
    font-size: 12px;
}

/* Profile photo button hover effects */
.profile-photo-actions button {
    padding: 3px 6px;
    font-size: 10px;
    border-radius: 6px;
}

.profile-photo-actions button:hover {
    transform: translateY(-1px);
    box-shadow: var(--shadow-medium);
}

/* Pet Modal Styles - Compact and Theme Matched */
.modal__overlay {
    position: fixed !important;
    top: 0 !important;
    left: 0 !important;
    width: 100% !important;
    height: 100% !important;
    background: rgba(0, 0, 0, 0.5) !important;
    z-index: 9998 !important;
    backdrop-filter: none !important;
    filter: none !important;
}

.pet__modal {
    position: fixed !important;
    top: 50% !important;
    left: 50% !important;
    transform: translate(-50%, -50%) !important;
    max-width: 800px;
    width: 90%;
    height: auto;
    max-height: 80vh;
    overflow: visible;
    background: var(--card-background);
    border-radius: var(--border-radius);
    box-shadow: var(--shadow-large);
    z-index: 10000 !important;
}

.pet__modal .modal__header {
    padding: 20px 25px 15px 25px;
    border-bottom: 1px solid var(--border-color);
    background: var(--background-color);
    border-radius: var(--border-radius) var(--border-radius) 0 0;
    position: relative;
}

.pet__modal .modal__close {
    position: absolute !important;
    top: 15px !important;
    right: 15px !important;
    background: var(--accent-color) !important;
    color: white !important;
    border: none !important;
    border-radius: 50% !important;
    width: 30px !important;
    height: 30px !important;
    display: flex !important;
    align-items: center !important;
    justify-content: center !important;
    cursor: pointer !important;
    font-size: 14px !important;
    transition: var(--transition) !important;
    box-shadow: var(--shadow-light) !important;
    margin: 0 !important;
    padding: 0 !important;
}

.pet__modal .modal__close:hover {
    background: #e53e3e !important;
    transform: translateY(-1px) !important;
    box-shadow: var(--shadow-medium) !important;
}

/* Specific pet modal close button positioning */
.pet-modal-close {
    position: absolute !important;
    top: 15px !important;
    right: 15px !important;
    background: var(--accent-color) !important;
    color: white !important;
    border: none !important;
    border-radius: 50% !important;
    width: 30px !important;
    height: 30px !important;
    display: flex !important;
    align-items: center !important;
    justify-content: center !important;
    cursor: pointer !important;
    font-size: 14px !important;
    transition: var(--transition) !important;
    box-shadow: var(--shadow-light) !important;
    margin: 0 !important;
    padding: 0 !important;
    z-index: 1000 !important;
    float: none !important;
    clear: both !important;
}

.pet-modal-close:hover {
    background: #e53e3e !important;
    transform: translateY(-1px) !important;
    box-shadow: var(--shadow-medium) !important;
}

.pet__modal .modal__header h3 {
    margin: 0;
    font-size: 18px;
    font-weight: 600;
    color: var(--text-primary);
}

.pet__modal .modal__body {
    padding: 15px 20px 20px 20px;
    max-height: none;
    overflow: visible;
}

.pet__modal .pet__photo__section {
    text-align: center;
    margin-bottom: 8px;
}

.pet__modal .pet__photo__container {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    background: var(--background-color);
    display: inline-flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    box-shadow: var(--shadow-light);
    border: 3px solid var(--primary-color);
}

.pet__modal .pet__modal__photo {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.pet__modal .pet__photo__placeholder {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: var(--text-secondary);
    font-size: 24px;
}

.pet__modal .pet__details {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 15px;
    margin-bottom: 15px;
}

.pet__modal .pet__field {
    background: var(--background-color);
    padding: 12px;
    border-radius: var(--border-radius);
    border-left: 3px solid var(--primary-color);
    box-shadow: var(--shadow-light);
}

.pet__modal .pet__field label {
    display: block;
    font-weight: 600;
    color: var(--text-secondary);
    margin-bottom: 6px;
    font-size: 13px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.pet__modal .pet__field span {
    display: block;
    color: var(--text-primary);
    font-size: 16px;
    font-weight: 500;
}

.pet__modal .status__badge {
    display: inline-block;
    padding: 4px 8px;
    border-radius: 12px;
    font-size: 11px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.pet__modal .status__badge.status__yes {
    background: #d4edda;
    color: #155724;
}

.pet__modal .status__badge.status__no {
    background: #f8d7da;
    color: #721c24;
}

/* Responsive design for pet modal */
@media (max-width: 768px) {
    .pet__modal {
        max-width: 95%;
        width: 95%;
    }
    
    .pet__modal .pet__details {
        grid-template-columns: 1fr 1fr;
        gap: 12px;
    }
    
    .pet__modal .modal__body {
        padding: 20px 25px 25px 25px;
    }
    
    /* Responsive styling for form fields - stack on mobile */
    .right-container .set {
        flex-direction: column;
        gap: 8px;
    }
    
    .right-container .set > div {
        flex: none;
        width: 100%;
        margin-bottom: 8px;
    }
}

@media (max-width: 480px) {
    .pet__modal .pet__details {
        grid-template-columns: 1fr;
        gap: 10px;
    }
    
    .pet__modal .pet__photo__container {
        width: 100px;
        height: 100px;
    }
}

/* Responsive adjustments */
@media (max-width: 600px) {
    .pet__modal {
        max-width: 95vw;
        margin: 20px;
    }
    
    .pet__modal .pet__details {
        grid-template-columns: 1fr;
        gap: 10px;
    }
    
    .pet__modal .modal__body {
        padding: 15px 20px 20px 20px;
    }
    
    /* Responsive styling for new dropdown fields - moved to media query */
    
    .pets-event-type, .pets-medical-condition {
        margin-top: 10px;
    }
    
    /* Vaccination section responsive */
    .vaccination-item {
        flex-direction: column;
        align-items: flex-start;
        gap: 10px;
        padding: 12px;
    }
    
    .vaccination-date {
        width: 100%;
        max-width: 250px;
    }
    
    .other-vaccine-input {
        width: 100%;
        max-width: 250px;
    }
    
    .pets-vaccination-section {
        padding: 15px;
        /* Removed max-height restriction - handled by form scrolling */
    }
}

/* Make user profile clickable */
.user-profile {
    cursor: pointer;
    transition: all 0.3s ease;
}

.user-profile:hover {
    background: rgba(255, 255, 255, 0.1);
    border-radius: 6px;
}

