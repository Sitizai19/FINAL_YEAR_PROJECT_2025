.services-list {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
}

.service-card {
    background-color: #ffffff;
    border-radius: 8px;
    padding: 1.25rem;
    border: 1px solid #f0f0f0;
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    transition: all 0.2s ease;
