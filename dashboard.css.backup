/* ===========================================
   ADMIN DASHBOARD CSS - MINIMALIST DESIGN
   =========================================== */

.admin-dashboard-container {
    display: flex;
    min-height: 100vh;
    background-color: #ffffff;
    font-family: "Poppins", sans-serif;
}

/* Left Sidebar - Minimalist */
.admin-sidebar {
    width: 220px;
    background-color: #ffffff;
    border-right: 1px solid #f0f0f0;
    padding: 2rem 0;
    position: fixed;
    height: 100vh;
    overflow-y: auto;
}

.admin-header h1 {
    font-size: 1.25rem;
    font-weight: 600;
    color: #2d3748;
    margin: 0 0 2rem 0;
    padding: 0 1.5rem;
}

.admin-nav {
    padding: 0 1rem;
}

.nav-list {
    list-style: none;
    margin: 0;
    padding: 0;
}

.nav-item {
    margin-bottom: 0.25rem;
}

.nav-link {
    display: flex;
    align-items: center;
    padding: 0.75rem 1rem;
    text-decoration: none;
    color: #718096;
    border-radius: 6px;
    transition: all 0.2s ease;
    font-weight: 500;
    font-size: 0.9rem;
}

.nav-link:hover {
    background-color: #f8f9fa;
    color: #2d3748;
}

.nav-item.active .nav-link {
    background-color: #2d3748;
    color: #ffffff;
}

.nav-link i {
    margin-right: 0.75rem;
    width: 16px;
    text-align: center;
    font-size: 0.9rem;
}

